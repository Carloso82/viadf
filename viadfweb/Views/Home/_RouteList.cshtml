@model List<viadflib.Route>

@using viadflib

@if (Model.Count > 0)
{
    <table>
        <tr align="left">
            <th style="width: 100px">
                Tipo
            </th>
            <th style="width: 100px">
                Nombre
            </th>
            <th style="width: 200px">
                De
            </th>
            <th style="width: 200px">
                A
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Type.Name
                </td>
                <td>
                    @Html.ActionLink(item.Name, "Route", new { type = Utils.Capitalize(item.Type.SeoName), name = Utils.Capitalize(item.SeoName) })
                </td>
                <td>
                    @item.FromName
                </td>
                <td>
                    @item.ToName
                </td>
            </tr>
        }
    </table>
}

